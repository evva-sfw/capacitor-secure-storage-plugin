{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "declaration": true,
        "esModuleInterop": true,
        "inlineSources": true,
        "lib": [
            "dom",
            "ESNext"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist/esm",
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "ESNext"
    },
    "files": [
        "src/index.ts"
    ]
}
